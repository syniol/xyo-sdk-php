{
  "name": "xyo/sdk",
  "version": "1.0.0",
  "description": "XYO Financial Official SDK for PHP",
  "authors": [
    {
      "name": "Syniol Limited",
      "email": "hadi@syniol.com",
      "homepage": "https://syniol.com",
      "role": "Author"
    }
  ],
  "keywords": [
    "XYO.financial",
    "SDK",
    "Bank Transaction",
    "Enrichment",
    "AI"
  ],
  "homepage": "https://xyo.financial",
  "support": {
    "issues": "https://github.com/syniol/xyo-sdk-php/issues"
  },
  "type": "library",
  "scripts": {
    "test": [
      "@composer install",
      "phpunit ./tests --no-coverage"
    ],
    "test-dev": [
      "@composer install",
      "phpunit ./tests --coverage-html ./coverage"
    ]
  },
  "scripts-descriptions": {
    "test": "Runs all the tests placed inside the 'Tests' folder"
  },
  "require": {
    "php": ">=7.1.33",
    "guzzlehttp/guzzle": "~6.5.8",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.2"
  },
  "license": "Apache-2.0",
  "autoload": {
    "psr-4": {
      "XYO\\SDK\\": "src/",
      "Tests\\": "tests/"
    }
  },
  "minimum-stability": "stable"
}
